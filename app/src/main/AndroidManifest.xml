<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ridesharinghc">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RideSharingHC">

        <!-- Set SplashActivity as the main launcher activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RideSharingHC">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare LoginRegisterActivity -->
        <activity android:name=".LoginRegisterActivity" />

        <!-- Declare LoginActivity -->
        <activity android:name=".LoginActivity" />

        <!-- Declare HomeScreenActivity -->
        <activity android:name=".HomeScreenActivity" />

    </application>

</manifest>
